{
    "name": "PX4 Cube+ Orange Development",
    "dockerComposeFile": ["../docker-compose.yml"],
    "service": "dev",
    "workspaceFolder": "/workspace",

    "shutdownAction": "stopCompose",

    "remoteUser": "px4dev",

    "runArgs": [
        "--privileged"
    ],

    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
        "source=${localEnv:HOME}/.Xauthority,target=/home/px4dev/.Xauthority,type=bind,readonly"
    ],

    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "LIBGL_ALWAYS_SOFTWARE": "0",
        "MESA_GL_VERSION_OVERRIDE": "3.3",
        "PX4_HOME": "/workspace/PX4-Autopilot"
    },

    "forwardPorts": [
        14550,
        14540,
        5760,
        8080
    ],

    "portsAttributes": {
        "14550": {
            "label": "QGroundControl MAVLink",
            "protocol": "udp"
        },
        "14540": {
            "label": "MAVSDK API",
            "protocol": "udp"
        },
        "5760": {
            "label": "Mission Planner TCP"
        },
        "8080": {
            "label": "Gazebo Web"
        }
    },

    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "files.associations": {
                    "*.msg": "ros",
                    "*.srv": "ros",
                    "*.launch": "xml",
                    "*.params": "properties"
                },
                "editor.formatOnSave": true,
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "python.formatting.provider": "black",
                "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
                "cmake.configureOnOpen": false
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "redhat.vscode-yaml",
                "streetsidesoftware.code-spell-checker",
                "eamodio.gitlens",
                "mhutchie.git-graph",
                "yzhang.markdown-all-in-one",
                "ms-azuretools.vscode-docker"
            ]
        }
    },

    "postCreateCommand": "bash /workspace/scripts/post_create.sh",

    "postStartCommand": "echo 'PX4 Dev Container Ready! Run px4-sitl to start simulation.'",

    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    }
}

